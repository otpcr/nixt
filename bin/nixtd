#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C,W0212,W0718


"daemon"


import getpass
import os
import pwd
import sys
import time
import _thread


from nixt.persist import Workdir, modname, pidfile, pidname
from nixt.runtime import Errors, later, launch


NAME        = Errors.__module__.split(".", maxsplit=2)[-2]
Workdir.wdr = os.path.expanduser(f"~/.{NAME}")


if os.path.exists("mods"):
    import mods.face as MODS
else:
    MODS = None


modpath = os.path.dirname(modname())


if os.path.exists(modpath):
    sys.path.insert(0, modpath)
    import mods.face as MODULES
else:
    MODULES = None


def daemon(verbose=False):
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    pid2 = os.fork()
    if pid2 != 0:
        os._exit(0)
    if not verbose:
        with open('/dev/null', 'r', encoding="utf-8") as sis:
            os.dup2(sis.fileno(), sys.stdin.fileno())
        with open('/dev/null', 'a+', encoding="utf-8") as sos:
            os.dup2(sos.fileno(), sys.stdout.fileno())
        with open('/dev/null', 'a+', encoding="utf-8") as ses:
            os.dup2(ses.fileno(), sys.stderr.fileno())
    os.umask(0)
    os.chdir("/")
    os.nice(10)


def errors():
    for err in Errors.errors:
        for line in err:
            print(line)


def forever():
    while True:
        try:
            time.sleep(1.2)
        except (KeyboardInterrupt, EOFError):
            _thread.interrupt_main()


def init(*pkgs):
    mods = []
    for pkgu in pkgs:
        for modnn in dir(pkgu):
            if modnn.startswith("__"):
                continue
            modie = getattr(pkgu, modnn)
            if "init" not in dir(modie):
                continue
            thr = launch(modie.init, "init")
            mods.append((modie, thr))
    return mods


def scan(*pkgs):
    for pkg in pkgs:
        for modn in dir(pkg):
            if modn.startswith("__"):
                continue
            modu = getattr(pkg, modn)
            if "register" not in dir(modu):
                continue
            modu.register()


def privileges(username):
    pwnam = pwd.getpwnam(username)
    os.setgid(pwnam.pw_gid)
    os.setuid(pwnam.pw_uid)


def wrap(func2):
    try:
        func2()
    except (KeyboardInterrupt, EOFError):
        pass
    except Exception as ex:
        later(ex)


def main():
    daemon(True)
    privileges(getpass.getuser())
    pidfile(pidname(NAME))
    scan(MODS, MODULES)
    init(MODS, MODULES)
    forever()


if __name__ == "__main__":
    wrap(main)
    errors()
