#!/usr/bin/env python3
# This file is in the Public Domain.


"check basics"


import os
import sys


IGNORE = []
NAME = "nixt"


def ignore(txt):
    """ check for ignore """
    for ign in IGNORE:
        if ign in txt:
            return True
    return False


def popen(txt):
    """ run command in popen """
    for line in os.popen(txt).readlines():
        if ignore(line):
            continue
        print(line.rstrip())
        sys.stdout.flush()


def main():
    """ main """
    popen(f'grep -R "print(" {NAME}')
    popen(f'grep -R __import__ {NAME}')
    popen(f'grep -R "import sys" {NAME}')
    popen(f'grep -R getpass {NAME}')
    #popen(f'grep -R {NAME} {NAME}')
    #popen(f'grep -R importlib {NAME}')
    #popen(f'grep -R "import os" {NAME}')


if __name__ == "__main__":
    main()
