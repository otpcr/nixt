#!/usr/bin/env python3
# This file is placed in the Public Domain.


"linted"


import os


IGNORES = ["---", "Your code"]
IGNORES = []
NAME = "nixt"


def ignore(txt):
    """ check for ignore """
    for ign in IGNORES:
        if ign in txt:
            return True
    return False


def popen(txt):
    """ run command in popen """
    goth = False
    for line in os.popen(txt).readlines():
        if not line.strip() or ignore(line):
            continue
        if line:
            goth = True
        print(line.rstrip())
    return goth


popen("bin/clean -f")
popen(f"pylint {NAME}/*.py {NAME}/modules/*.py  tests/*.py bin/*")
