#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=R,W0105,C0413,W0611


"cli"


import getpass
import sys


from nixt.command import Commands, Event, command, parse
from nixt.default import Config
from nixt.modules import face
from nixt.runtime import NAME, Client, errors


"defines"


cfg = Config()


TXT = """[Unit]
Description=%s
After=network-online.target

[Service]
Type=simple
User=%s
Group=%s
ExecStart=/home/%s/.local/bin/%ss

[Install]
WantedBy=multi-user.target"""


class CLI(Client):

    "CLI"

    def raw(self, txt):
        "print text."
        print(txt)


"commands"


def srv(event):
    "create service file (pipx)."
    name  = getpass.getuser()
    event.reply(TXT % (NAME.upper(), name, name, name, NAME))


Commands.add(srv)


"main"


def main():
    "main"
    parse(cfg, " ".join(sys.argv[1:]))
    cli = CLI()
    evt = Event()
    evt.orig = repr(cli)
    evt.txt = cfg.txt
    command(cli, evt)


if __name__ == "__main__":
    main()
    errors(print)
