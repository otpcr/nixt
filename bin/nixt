#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C,W0611,W0718


"cli"


import os
import sys
import threading
import time
import _thread


sys.path.insert(0, os.getcwd())


from nixt.object  import Object, parse
from nixt.persist import Workdir, modname


from mods.main    import NAME, Client, Command, command, scanner
from mods.runtime import Errors, Reactor, later


class Config(Object):

    pass

cfg = Config()


if os.path.exists("mods"):
    import mods.face as MODS
else:
    MODS = None


modpath = modname()


if os.path.exists(modpath):
    sys.path.insert(0, os.getcwd())
    import mods.face as MODULES
else:
    MODULES = None


class CLI(Client):

    def raw(self, txt):
        print(txt)


def errors():
    for error in Errors.errors:
        for line in error:
            print(line)


def main():
    parse(cfg, " ".join(sys.argv[1:]))
    scanner(MODS, MODULES)
    cli = CLI()
    evt = Command()
    evt.txt = cfg.txt
    command(cli, evt)
    evt.wait()


if __name__ == "__main__":
    main()
    errors()
