#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413,W0105,W0611


"cli"


import os
import sys


sys.path.insert(0, os.getcwd())


from nixt.modules import command, scan
from nixt.object  import parse
from nixt.runtime import Client, Config, Errors, Event


cfg = Config()


class CLI(Client):

    "CLI"

    def __init__(self):
        Client.__init__(self)
        self.register("event", command)

    def raw(self, txt):
        "print text."
        print(txt)


def errors():
    "print errors."
    for error in Errors.errors:
        for line in error:
            print(line)


def readmods():
    "read modules."
    mods = None
    if not os.path.exists("mods"):
        modpath = modname()
        sys.path.insert(0, os.path.dirname(modpath))
    import mods
    return mods


def main():
    "main"
    parse(cfg, " ".join(sys.argv[1:]))
    scan(readmods())
    cli = CLI()
    evt = Event()
    evt.txt = cfg.txt
    command(cli, evt)
    evt.wait()


if __name__ == "__main__":
    main()
    errors()
