#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=R,C0413


"cli"


import getpass
import os
import readline
import sys


from nixt.command import command, parse
from nixt.modules import face
from nixt.object  import Default
from nixt.runtime import Client, Event, errors


class CLI(Client):

    "CLI"

    def raw(self, txt):
        "print text."
        print(txt)


def main():
    "main"
    cfg = Default()
    parse(cfg, " ".join(sys.argv[1:]))
    cli = CLI()
    evt = Event()
    evt.orig = repr(cli)
    evt.txt = cfg.txt
    command(cli, evt)


if __name__ == "__main__":
    main()
    errors(print)
