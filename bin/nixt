#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413,W0105,W0611


"cli"


import os
import sys


sys.path.insert(0, os.getcwd())


from nixt.object  import parse
from nixt.persist import modname
from nixt.runtime import Client, Config, Errors, Event


cfg = Config()


if not os.path.exists("mods"):
    sys.path.insert(0, os.path.dirname(modname()))


import mods


class CLI(Client):

    "CLI"


    def raw(self, txt):
        "print text."
        print(txt)


def errors():
    "print errors."
    for error in Errors.errors:
        for line in error:
            print(line)


def main():
    "main"
    parse(cfg, " ".join(sys.argv[1:]))
    mods.scan(mods)
    cli = CLI()
    evt = Event()
    evt.txt = cfg.txt
    mods.command(cli, evt)
    evt.wait()


if __name__ == "__main__":
    main()
    errors()
