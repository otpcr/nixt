#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413,W0105


"service"


import getpass
import os
import pwd
import sys
import time
import _thread


from nixt.command import pidfile, pidname
from nixt.modules import face as faced
from nixt.runtime import Errors, later, launch


def errors():
    "print errors."
    for err in Errors.errors:
        for line in err:
            print(line)


def forever():
    "it doesn't stop, until ctrl-c"
    while True:
        try:
            time.sleep(1.0)
        except (KeyboardInterrupt, EOFError):
            _thread.interrupt_main()


def init(*pkgs):
    "run the init function in modules."
    mods = []
    for pkg in pkgs:
        for modname in dir(pkg):
            if modname.startswith("__"):
                continue
            modi = getattr(pkg, modname)
            if "init" not in dir(modi):
                continue
            thr = launch(modi.init)
            mods.append((modi, thr))
    return mods


def privileges(username):
    "privileges."
    pwnam2 = pwd.getpwnam(username)
    os.setgid(pwnam2.pw_gid)
    os.setuid(pwnam2.pw_uid)


def wrap(func):
    "reset console."
    try:
        func()
    except (KeyboardInterrupt, EOFError):
        pass
    except Exception as ex:
        later(ex)


def main():
    "main"
    privileges(getpass.getuser())
    pidfile(pidname())
    init(faced)
    forever()


if __name__ == "__main__":
    wrap(main)
    errors()
