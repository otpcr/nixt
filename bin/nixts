#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=R,W0105,C0413,W0611,W0718


"daemon"


import getpass
import os
import sys
import time


sys.path.insert(0, os.getcwd())


from nixt.command import Commands, scanner
from nixt.main    import forever, init, pidfile, privileges
from nixt.modules import face
from nixt.object  import Obj, keys
from nixt.persist import modpath, pidname
from nixt.runtime import Broker, Errors, Event, Reactor, later, launch


"defines"


NAME      = __file__.rsplit("/", maxsplit=1)[-1]
STARTTIME = time.time()


"utilities"


def wrap(func):
    "reset console."
    try:
        func()
    except (KeyboardInterrupt, EOFError):
        print("")
    except Exception as ex:
        later(ex)


"commands"


def cmd(event):
    "list commands."
    event.reply(",".join(sorted(keys(Commands.cmds))))


"main"


def main():
    "main"
    privileges(getpass.getuser())
    pidfile(pidname())
    Commands.add(cmd)
    scanner(face)
    init(face)
    forever()


if __name__ == "__main__":
    wrap(main)
    for error in Errors.errors:
        for line in error:
            print(line)
